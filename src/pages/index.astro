---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div>
    <Header />

    <section>
      <!-- Content that sits on top of the background image -->
      <div class="flex flex-col items-center justify-center gap-4">
        <h1 class="font-bold text-2xl">MT: A Meditation Timer</h1>
        <p class="font-light text-sm">
          This is a great meditation timer. It's so simple. So elegant. So
          amazing. you will love this meditation timer so much I promise you.
        </p>
        <!-- App Store Button -->
        <a href="#" class="">
          <img src="/download-app-store.svg" alt="" />
        </a>
      </div>
    </section>
  </div>

  <Footer />
</Layout>
